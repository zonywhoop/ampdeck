{
  "SDKVersion": 2,
  "Author": "rackemrack",
  "CodePath": "plugin.html",
  "Description": "Now playing display and controls for Plexamp",
  "Name": "Ampdeck",
  "Icon": "imgs/plugin-icon",
  "URL": "https://plex.tv",
  "Version": "1.1.0",
  "Category": "Ampdeck",
  "CategoryIcon": "imgs/category-icon",
  "OS": [
    {
      "Platform": "windows",
      "MinimumVersion": "10"
    },
    {
      "Platform": "mac",
      "MinimumVersion": "10.15"
    }
  ],
  "Software": {
    "MinimumVersion": "6.0"
  },
  "Actions": [
    {
      "Icon": "imgs/album-art-icon",
      "Name": "Album Art",
      "States": [
        {
          "Image": "imgs/default-album",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": false,
      "Tooltip": "Displays album art from Plexamp. Press to play/pause.",
      "UUID": "com.rackemrack.ampdeck.album-art",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Icon": "imgs/strip-icon",
      "Name": "Now Playing Strip",
      "States": [
        {
          "Image": "imgs/strip-encoder-icon"
        }
      ],
      "SupportedInMultiActions": false,
      "Tooltip": "Shows now playing info on the touch strip with configurable dial controls",
      "UUID": "com.rackemrack.ampdeck.strip",
      "Controllers": ["Encoder"],
      "Encoder": {
        "layout": "layouts/now-playing.json",
        "TriggerDescription": {
          "Rotate": "Next / Previous or Volume",
          "Push": "Play/Pause, Shuffle, or Repeat (configurable)",
          "Touch": "Play / Pause"
        }
      },
      "PropertyInspectorPath": "pi-strip.html"
    },
    {
      "Icon": "imgs/play-pause-icon",
      "Name": "Play / Pause",
      "States": [
        {
          "Image": "imgs/play-icon",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": true,
      "Tooltip": "Toggle play/pause",
      "UUID": "com.rackemrack.ampdeck.play-pause",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Icon": "imgs/prev-icon",
      "Name": "Previous",
      "States": [
        {
          "Image": "imgs/prev-icon",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": true,
      "Tooltip": "Tap for previous track, hold to rewind",
      "UUID": "com.rackemrack.ampdeck.previous",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Icon": "imgs/next-icon",
      "Name": "Next",
      "States": [
        {
          "Image": "imgs/next-icon",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": true,
      "Tooltip": "Tap for next track, hold to fast forward",
      "UUID": "com.rackemrack.ampdeck.next",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Name": "Volume Up",
      "States": [
        {
          "Image": "imgs/volume-up-icon",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": false,
      "Tooltip": "Increase volume",
      "UUID": "com.rackemrack.ampdeck.volume-up",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Name": "Volume Down",
      "States": [
        {
          "Image": "imgs/volume-down-icon",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": true,
      "Tooltip": "Tap to Decrease volume, Hold to mute",
      "UUID": "com.rackemrack.ampdeck.volume-down",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Icon": "imgs/info-icon",
      "Name": "Track Info",
      "States": [
        {
          "Image": "imgs/info-icon",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": false,
      "Tooltip": "Shows track info: format, quality, track number",
      "UUID": "com.rackemrack.ampdeck.info",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Icon": "imgs/time-icon",
      "Name": "Time Elapsed",
      "States": [
        {
          "Image": "imgs/time-icon",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": false,
      "Tooltip": "Shows elapsed / total time with progress bar",
      "UUID": "com.rackemrack.ampdeck.time",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Icon": "imgs/shuffle-icon",
      "Name": "Shuffle",
      "States": [
        {
          "Image": "imgs/shuffle-default",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": true,
      "Tooltip": "Toggle shuffle on/off",
      "UUID": "com.rackemrack.ampdeck.shuffle",
      "PropertyInspectorPath": "pi.html"
    },
    {
      "Icon": "imgs/repeat-icon",
      "Name": "Repeat",
      "States": [
        {
          "Image": "imgs/repeat-default",
          "ShowTitle": false
        }
      ],
      "SupportedInMultiActions": true,
      "Tooltip": "Cycle repeat: Off → All → One",
      "UUID": "com.rackemrack.ampdeck.repeat",
      "PropertyInspectorPath": "pi.html"
    }
  ],
  "UUID": "com.rackemrack.ampdeck"
}
